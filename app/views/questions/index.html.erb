<div> <%= render 'layouts/menu' %></div>
<div class="container">
	
	<div class="row">
		<div class="col-md-3"></div>
			<div class="col-md-6">
				<h1 id="list_title">MAD Topics</h1>

				<%= button_to new_question_path, { method: :get, class: "btn btn-default btn-lg"} do %>
				       Question <i class="glyphicon glyphicon-plus"></i>
				<% end %><br>
				
				<% @questions.order("created_at desc").each do |q| %>
					<div class="panel panel-primary">
			  			<div class="panel-heading">
							<h2 class="panel-title">
								<%= q.topic.name %>
							</h2>
						</div>
						<div class="panel-body">
							<p><%= q.enigma %></p>
						</div>
						<div class="panel-footer">
							<%= link_to "Answer Question", question_path(q) %>
						</div>
					</div>
				<% end %>

				<br/><br/>
			</div>
		<div class="col-md-3"></div>
	</div>
</div>

