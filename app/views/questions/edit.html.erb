<div class="container">
	<h1>Edit This Question</h1>
	Topic: <%= @question.topic.name %><br/>
	<%= nested_form_for @question do |f| %>
		
		Question: <%= f.text_area :enigma, class: "form-control" %><br/>

		<%= f.fields_for :answers do |builder| %>
			<p>	
				Answer: <%= builder.text_field :description, class: "form-control", disabled: true %>
				<br/>
			</p>
		<% end %>
		<br>

		<%= f.submit "Update Question", class: "btn btn-danger" %>

	<% end %>

	<%= link_to "Back to Question List", questions_path %>
</div>