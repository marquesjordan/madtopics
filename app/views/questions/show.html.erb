
<div class="container">
	<h1><%= @question.topic.name.upcase %></h1>
	<p><%= @question.enigma %></p>
	<p>Created by: <%= @user.email %></p> 

	Choose your answer:
	<ol>
		<% for answer in @question.answers %>
			<li><%= link_to answer.description, user_answers_path(:answer_id => answer, :user_id => current_user), class: "btn btn-primary" %></li><br>

		<% end %>
	</ol>

	<%= link_to "Edit", edit_question_path(@question) %>
	<%= link_to "Delete", :question, method: :delete, data: {confirm: 'Are you sure you want to delete it?'} %><br/><br/>
	<%= link_to "Back to Question List", questions_path %>
</div>