
<div class="container">
	<h1><%= @question.topic.name.upcase %></h1>
	<p><%= @question.enigma %></p>
	<p><%= @user._id %></p> 

	
	<% for answer in @question.answers %>
		<!-- <div class="box"><%= answer.description %>

		</div> -->
	<% end %>
	<%= form_for @user do |f| %>
		<%= f.collection_radio_buttons(:answer_ids, @question.answers, :id, :description) %><br>
		
		<%= f.submit "Answer" %>
	<% end %>

	<%= link_to "Edit", edit_question_path(@question) %>
	<%= link_to "Delete", :question, method: :delete, data: {confirm: 'Are you sure you want to delete it?'} %><br/><br/>
	<%= link_to "Back to Question List", questions_path %>
</div>